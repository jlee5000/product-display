<div class="presentation">
  <div class="row">
    <div class="offset-lg-3 col-lg-6 col-md-6">

      <table class="table">
        <tr>
          <th colspan="2" align="left"><h3><%= @product_type[0].product_name %></h3> </th>
        </tr>

        <% @products.each_with_index do |p, index| %>
              <tr>
                <td><%= index+1 %></td>
                <td>
                  <strong><%= p.brand_name %></strong><br />
                  <%= p.product_name %>
                </td>
                <td>$<%= p.sell_price/100 %>.00</td>
              </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>